/* pages/search/search.wxss */
page {
  height: 100%;
  background-color: #eee;
}

.container {
  height: 100%;
  display: grid;
  grid-template-rows: 80% auto;
  grid-template-columns: 1fr;
  grid-gap: 10rpx;
  align-content: stretch;
}


.word-content {
  background: green;
  /* grid-row: 1; */
  /* display: block;
  height: %; */
}

.foot-search {
  background-color: green;
  /* grid-row: 2; */
  /* position: abolute;
  bottom: 0px; */
}

.wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 100rpx 100rpx;
  grid-gap: 10rpx;
}

.box1 {
  background-color: blue;
  grid-column: 2 / 4;
  grid-row: 1;
}

.box2 {
  background-color: blue;
  grid-column: 1;
  grid-row: 1 / 3;
}

.box3 {
  background-color: blue;
  grid-row: 2;
  grid-column: 3;
}
